body {
  background: #fff;
  background-repeat: no-repeat;
  background-position: initial;
  background-size: contain;
  background-color: #fff;
  margin: 0;
}
@font-face {
  font-family: "YouSheBiaoTiHei";
  src: url("../font/YouSheBiaoTiHei.ttf") format("truetype");
}
.row-flex {
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
}

.row-direction {
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
}

.row-wrap {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  align-items: center;
  box-sizing: border-box;
}

.flex-end {
  display: flex;
  justify-content: flex-end;
}

.column-direction {
  display: flex;
  flex-direction: column;
}

.column-direction-center-end {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
}

.column-direction-center {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.column-space-between {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.row-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

.row-space-between {
  display: flex;
  justify-content: space-between;
}

.row-align-center {
  display: flex;
  align-items: center;
}

.row-align-center-justify-around {
  display: flex;
  align-items: center;
  justify-content: space-around;
}

.row-space-between-center {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.margin-20 {
  margin: 0 20px;
}

.margin-top-16 {
  margin-top: 16px;
}

.margin-top-24 {
  margin-top: 24px;
}

.margin-top-20 {
  margin-top: 20px;
}

.margin-top-30 {
  margin-top: 30px;
}

.margin-top-40 {
  margin-top: 40px;
}

.margin-left-20 {
  margin-left: 20px;
}
.install-button {
  width: 100%;
  height: 40px;
  font-size: 16px;
  font-family: Roboto-Medium, Roboto;
  font-weight: 500;
  color: #ffffff;
  line-height: 19px;
  background: #257c60;
  border-radius: 4px;
  margin-top: 28px;
}
.pending-button {
  font-size: 16px;
  font-family: Roboto-Medium, Roboto;
  font-weight: 500;
  color: #01865f;
  line-height: 19px;
  width: 100%;
  height: 40px;
  border-radius: 4px;
  border: 1px solid #e7ebee;
  border-radius: 4px;
  margin-top: 28px;
  box-sizing: border-box;
}
.banner-frame {
  margin-top: 22px;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  overflow-x: auto;

  &::-webkit-scrollbar {
    display: none;
  }
}
.banner-img {
  width: 108px;
  height: 188px;
  /* box-shadow: 0px 0px 8px 0px rgba(0, 0, 0, 0.16); */
  border-radius: 8px;
  margin-left: 8px;
}
